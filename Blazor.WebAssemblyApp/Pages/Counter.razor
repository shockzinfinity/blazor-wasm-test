@page "/counter"
@inject IJSRuntime Jsr

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div id="reactClickCounter"></div>

@code {
  private int currentCount = 0;

  [Parameter]
  public int IncrementNumber { get; set; } = 1;

  private async void IncrementCount()
  {
    @* currentCount++; *@
    currentCount += this.IncrementNumber;

    await Jsr.InvokeVoidAsync("RenderCounter", currentCount);
  }
}
